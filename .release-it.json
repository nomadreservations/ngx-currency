{
  "non-interactive": true,

  "hooks": {
    "after:bump": ["npm run build", "npx auto-changelog -p"],
    "after:release": "echo Successfully released ${version} to ${dist.repo}."
  },
  "npm": {
    "publishPath": "./dist"
  },
  "github": {
    "release": false
  },
  "prompt": {
    "src": {
      "github": false
    }
  }
}
